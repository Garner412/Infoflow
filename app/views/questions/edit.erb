<div class="container">
<%= erb :'questions/_errors', layout: false, locals: {errors: @errors} %>


<form class="form-horizontal" action="/questions/<%= @question.id %>" method="POST">
  <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input name="question[title]" type="text" class="form-control" id="title" value="<%= @question.title %>">
    </div>
  </div><br>

  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Question</label>
      <textarea name="question[content]" type="text" class="form-control" id="content" rows="5"><%= @question.content %></textarea>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <button type="submit" class="btn btn-default">Update Question!</button>
    </div>
  </div>

</form>
</div>
