<br><br>
<div class="container">

  <%= erb :'questions/_errors', layout: false, locals: {errors: @errors} %>

  <div>
    <h1><%= @question.title %></h1>
      <form action='/questions/<%= @question.id %>/vote' method='post'>
      <input class="btn btn-default" type="submit" value="👍">
      <%= @question.votes.count %>
      </form>
  </div>
  <p> <%= long_form_date(@question.created_at) %> by <%= @question.user.username.capitalize %> </p>
  <p> <%= @question.content %> </p>

<!-- add logic to address edit button appearing when not the author-->
 <%= erb :'questions/_edit-button', layout: false, locals: {question: @question} %>

  <h5> Comments </h5>
    <% @question.comments.each do |qcomment| %>
      <ul>
        <li class="well-lg"><%= qcomment.text %>
          <form action='/comments/<%= qcomment.id %>/vote' method='post'>
            <input class="btn btn-default" type="submit" value="👍">
              <%= qcomment.votes.count %>
          </form>
      </li>
      </ul>
    <% end %>

  <% if logged_in? %>
  <form action='/questions/<%= @question.id %>/comments/new'>
    <input class="btn btn-default" type="submit" value="Comment on Question">
  </form><br>
  <% end %>


    <h3>Answers</h3>
  <% @answers.each do |answer| %>
      <p style="border-top: 3px solid black"> <%= answer.body %> </p>
      <form action='/answers/<%= answer.id %>/vote' method='post'>
        <input class="btn btn-default" type="submit" value="👍">
        <%= answer.votes.count %>
      </form>
          <h5> Comments </h5>
            <% answer.comments.each do |acomment| %>
              <p> <%= acomment.text %> </p>
           <% if logged_in? %>
           <form action='/answers/<%= answer.id %>/vote' method='post'>
            <input class="btn btn-default" type="submit" value="">
              <%= answer.votes.count %>
            </form>
          <% end %>
        <% end %>
          <form action='/answers/<%= answer.id %>/comments/new' id="comment_form" method="post">
            <textarea class="form-control" name="comment_text" placeholder="Enter a comment here"></textarea><br>
            <input class="btn btn-default" type="submit" value="Submit Comment">
          </form><br>
    <% end %>

  <% if logged_in? %>
  <form action='/questions/<%= @question.id %>/answers/new'>
    <input class="btn btn-default" type="submit" value="Add an answer">
  </form><br>
<% end %>

</div>
