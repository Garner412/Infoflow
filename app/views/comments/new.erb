

<% if logged_in? %>
  <div class="container">

    <h1>Add a comment!</h1>
    <h2> Question Info</h2>
    <ul>
      <li> <%= @question.title %> </li>
      <li> <%= @question.user.username %> </li>
      <li> <%= @question.content %> </li>
    </ul>
      <form action="/questions/<%= @question.id %>/comments" id="comment_form" method="post">
        <textarea name="comment_text" rows="4" cols="50">
        Please... Ask Jones AAAANYTTHING!
        </textarea>
     <input class="submit_button" type="submit" value="Submit Comment">
  </div>
<% end %>


<% if !logged_in? %>
  <p> not logged in :(</p>
<% end %>

