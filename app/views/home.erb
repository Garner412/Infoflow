<div class="jumbotron lk_jumbo">
  <h1 class="lk_jumbo_text">Ask Jones</h1>
</div>

<% if logged_in? %>
  <form action='/questions/new'>
    <input type="submit" value="Ask a question">
  </form><br>
<% end %>


  <div class="col-md-4">
    <% @questions.each do  |question| %>
      <tbody>
        <tr class="list-group">
          <li class="list-group-item"><a href="/questions/<%= question.id %>"><%= question.title %></a></li>
        </tr>
      </tbody>
  <% end %>
</div>
